---
import Sidebar from "./Sidebar";
import TopBar from "./TopBar.astro";
import AuthGuard from "@components/auth/AuthGuard";
import UserAvatar from "@components/layout/UserAvatar";
import AlertNotificationBell from "@components/dashboard/AlertNotificationBell";
import "@styles/global.css";

interface Props {
  title?: string;
  breadcrumb?: string;
}

const { title = "Appix PM", breadcrumb = "Dashboard" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Appix PM - Centro de Comando Financiero" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <!-- Auth guard - redirects to /login if not authenticated -->
    <AuthGuard client:load />

    <div class="flex h-screen overflow-hidden">
      <Sidebar client:load />
      <div class="flex flex-col flex-1 overflow-hidden">
        <TopBar breadcrumb={breadcrumb}>
          <AlertNotificationBell client:load slot="notifications" />
          <UserAvatar client:load slot="user-avatar" />
        </TopBar>
        <main class="flex-1 overflow-auto bg-gray-50 p-6">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
